<div class="posts">
    {{#each posts}}
    <article class="card">
        <div class="card-header flex-row justify-space-between">
            <h2>
                <a href="/blog/{{blog_id}}">{{blog_name}}</a>
            </h2>
            <div>
                Posted by {{User.user_name}} on {{format_date created_at}}
            </div>
        </div>
        <div class="card-body">
            {{blog_text}}
        </div>
    </article>
    {{/each}}
</div>